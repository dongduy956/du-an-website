@using NONBAOHIEMVIETTIN.Models
@model news
@{
    ViewBag.Title = Model.title;
    ViewBag.Description = Model.content;
    ViewBag.Url = "https://" + HttpContext.Current.Request.Url.Host.ToString().Trim().ToLower() + HttpContext.Current.Request.RawUrl.ToString().Trim().ToLower();
    ViewBag.Image = "https://" + HttpContext.Current.Request.Url.Host.ToString().Trim().ToLower() + "/"+Model.image;
}
<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="row">
        <div class="col-12">
            <div class="breadcrumb_content">
                <ul>
                    <li><a href="/">Trang chủ</a></li>
                    <li><i class="fa fa-angle-right"></i></li>
                    <li>@Model.title</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->

<div style="padding:20px 50px">
    @*<img class="mb-2" src="/@Model.image" />*@
    <h3>@Model.title</h3>
    @Html.Raw(Model.content)
</div>
