@using NONBAOHIEMVIETTIN.Models
@{  
    var db = new nonbaohiemviettinEntities();
    var acc = Session["account"] as accounts;
    var cart = Session["cartSession"] as List<CartItem>;
    var aboutus = db.contact.SingleOrDefault(x => x.display == true);
}
<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.title | Nón bảo hiểm việt tin</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/images/logo/logo.png">
    <!-- all css here -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="~/assets/css/plugin.css">
    <link rel="stylesheet" href="~/assets/css/bundle.css">
    <link href="~/assets/css/jquery-ui.css" rel="stylesheet" />

    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/responsive.css">

    <link href="~/assets/css/toast.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
    <script src="~/assets/js/vendor/modernizr-2.8.3.min.js"></script>
    <script src="~/assets/js/vendor/jquery-1.12.0.min.js"></script>

    @RenderSection("styles", false)
</head>

<body>
    <!-- Add your site or application content here -->
    <!--pos page start-->
    <div class="pos_page">
        <div class="container">
            <!--pos page inner-->
            <div class="pos_page_inner">
                <!--header area -->
                <div class="header_area">
                    <!--header top-->
                    <div class="header_top">
                        <div class="row align-items-center">
                            <div class="col-lg-12 col-md-12">
                                <div class="switcher">
                                    <ul>
                                        <li class="">
                                            <a href="/gioi-thieu.html">
                                                Giới thiệu
                                            </a>

                                        </li>
                                        @if (acc != null)
                                        {
                                            <li style="margin-left:auto" class="languages">
                                                <a class="w-100">

                                                    @if (acc.issocial == 0)
                                                    {
                                                        <img style="border-radius:50%;width: 24px;margin-right: 2px;" src="/@acc.image" alt="">

                                                    }
                                                    else
                                                    {
                                                        <img style="border-radius:50%; width: 24px;margin-right: 2px;" src="@acc.image" alt="">

                                                    }
                                                        <i id="accountname" style="font-style:normal">@acc.fullname</i>
                                                    <i class="fa fa-angle-down"></i>
                                                </a>

                                                <ul class="dropdown_languages" style="right:0;min-width:150px">
                                                    <li>
                                                        <a id="btninfoacc" class="w-100" href="/thong-tin-tai-khoan.html">
                                                            <i class="far fa-user"></i>
                                                            Thông tin tài khoản
                                                        </a>
                                                    </li>
                                                    @if (acc.issocial == 0)
                                                    {
                                                       
                                                        <li>
                                                            <a id="btnchangepasswordlink" class="w-100" href="#">
                                                                <i class="fas fa-key"></i>
                                                                Đổi mật khẩu
                                                            </a>
                                                        </li>
                                                    }
                                                    <li>
                                                        <a class="w-100" href="#" id="btnlogout">
                                                            <i class="fas fa-sign-out-alt"></i>
                                                            Đăng xuất
                                                        </a>
                                                    </li>
                                                </ul>
                                            </li>
                                        }
                                        else
                                        {
                                            <li style="margin-left:auto">
                                                <a href="/dang-nhap.html">Đăng nhập</a>
                                            </li>
                                            <li>
                                                <a href="/dang-nhap.html">Đăng ký</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--header top end-->
                    <!--header middel-->
                    <div class="header_middel">
                        <div class="row align-items-center">
                            <!--logo start-->
                            <div class="col-lg-3 col-md-3">
                                <div class="logo">
                                    <a href="/"><img style="width:75px;" src="~/assets/images/logo/logo.png" alt=""></a>
                                </div>
                            </div>
                            <!--logo end-->
                            <div class="col-lg-9 col-md-9">
                                <div class="header_right_info">
                                    <div class="search_bar">
                                        <div class="form">
                                            <input name="keyword" id="txtkeyword" placeholder="Tìm kiếm..." type="text">
                                            <button id="btnsearch" type="submit"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>
                                    <div class="shopping_cart">
                                        <a href="">
                                            <i class="fa fa-shopping-cart"></i>
                                            <span>
                                                
                                                @(cart != null ? (cart.Sum(x => x.Quantity) + "sản phẩm -" + HoTro.Instances.convertVND(cart.Sum(x => x.Quantity * (x.Product.promationprice>0?x.Product.promationprice:x.Product.price)).ToString())) : "0 sản phẩm - 0đ")
                                            </span>
                                            <i class="fa fa-angle-down"></i>
                                        </a>

                                        <!--mini cart-->
                                        <div id="lst-cart" class="mini_cart">
                                            <div class="img-cart" style="padding:24px;">
                                                <img src="~/assets/images/cart/no-cart.png" />
                                            </div>
                                            <div id="cart" style="max-height:300px; overflow-y:scroll">
                                                @if (cart == null || cart.Count == 0)
                                                {

                                                    <script>
                                                        $(function () {
                                                            $('.img-cart').show();
                                                            $('#shipping-group').hide();
                                                        });
                                                    </script>

                                                }
                                                else
                                                {
                                                    <script>
                                                        $(function () {
                                                            $('.img-cart').hide();
                                                            $('#shipping-group').show();

                                                        });
                                                    </script>
                                                    foreach (var item in cart)
                                                    {
                                                        <div class="cart_item cart-@item.Product.id">
                                                            <div class="cart_img">
                                                                <a href="/chi-tiet/@(item.Product.alias).html"><img src="/@item.Product.image" alt=""></a>
                                                            </div>
                                                            <div class="cart_info">
                                                                <a href="/chi-tiet/@(item.Product.alias).html">@item.Product.name</a>
                                                                @if (item.Product.promationprice > 0)
                                                                {
                                                                <span class="cart_price">@HoTro.Instances.convertVND(item.Product.price.ToString())</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="cart_price">@HoTro.Instances.convertVND(item.Product.price.ToString())</span>
                                                                }
                                                                <span class="quantity">Số lượng: @item.Quantity</span>
                                                            </div>
                                                            <div class="cart_remove">
                                                                <a title="Xoá sản phẩm @item.Product.name" data-id="@item.Product.id" class="deletecart" href=""><i class="fa fa-times-circle"></i></a>
                                                            </div>
                                                        </div>

                                                    }
                                                }
                                            </div>
                                            <div id="shipping-group">
                                                <div class="total_price">
                                                    <span> Tổng tiền: </span>
                                                    <span class="prices">@(cart != null ? HoTro.Instances.convertVND(cart.Sum(x => x.Quantity * (x.Product.promationprice>0?x.Product.promationprice:x.Product.price)).ToString()) : "0")</span>
                                                </div>
                                                <div class="cart_button">
                                                    <a id="btncheckout" href="/gio-hang.html"> Giỏ hàng</a>
                                                </div>
                                            </div>
                                        </div>
                                        <!--mini cart end-->
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <!--header middel end-->
                    <div class="header_bottom">
                        <div class="row">
                            <div class="col-12">
                                @RenderPage("~/Views/Shared/_Navbar.cshtml")
                            </div>
                        </div>
                    </div>
                </div>
                <!--header end -->

                @RenderBody()

            </div>
        </div>
        <!--pos page end-->
        <!--footer area start-->
        <div class="footer_area">
            <div class="footer_top">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="footer_widget">
                         @if (aboutus != null)
                         {
                            <h3>@aboutus.title</h3>
                                    <p>@Html.Raw(aboutus.content)</p>
                                    <div class="footer_widget_contect">
                                        <p><i class="fa fa-map-marker" aria-hidden="true"></i>@aboutus.address </p>

                                        <p><a href="tel:@aboutus.phone"><i class="fa fa-mobile" aria-hidden="true"></i> @aboutus.phone</a></p>
                                        <a href="mailto:@aboutus.email"><i class="fa fa-envelope-o" aria-hidden="true"></i>@aboutus.email  </a>
                                    </div>
                         }
                         else
                         {
                             <h4 class="text-center text-warning">Lỗi thông tin liên hệ. Vui lòng liên hệ admin để biết.</h4>
                         }
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="footer_widget">
                                <h3>My Account</h3>
                                <ul>
                                    <li><a href="#">Your Account</a></li>
                                    <li><a href="#">My orders</a></li>
                                    <li><a href="#">My credit slips</a></li>
                                    <li><a href="#">My addresses</a></li>
                                    <li><a href="#">Login</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="footer_widget">
                                <h3>Informations</h3>
                                <ul>
                                    <li><a href="#">Specials</a></li>
                                    <li><a href="#">Our store(s)!</a></li>
                                    <li><a href="#">My credit slips</a></li>
                                    <li><a href="#">Terms and conditions</a></li>
                                    <li><a href="#">About us</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="footer_widget">
                                <h3>extras</h3>
                                <ul>
                                    <li><a href="#"> Brands</a></li>
                                    <li><a href="#"> Gift Vouchers </a></li>
                                    <li><a href="#"> Affiliates </a></li>
                                    <li><a href="#"> Specials </a></li>
                                    <li><a href="#"> Privacy policy </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer_bottom">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-4 col-md-4">
                            <div class="copyright_area">
                                <ul>
                                    <li><a href="/lien-he.html"> Liên hệ </a></li>
                                    <li><a href="#">  Dịch vụ khách hàng  </a></li>
                                    <li><a href="#">  Chính sách bảo mật  </a></li>
                                </ul>
                                <p>Copyright &copy; @DateTime.Now.Year <a href="#">Duy</a>. All rights reserved. </p>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div>
                                <div class="copyright_area text-center">
                                    <p>Đang online:<span id="visting">0</span></p>
                                    <p>Tổng người online:<span id="visited">0</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="footer_social text-right">
                                <ul>
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                                    <li><a class="pinterest" href="#"><i class="fa fa-pinterest-p" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-wifi" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--footer area end-->
        <!-- Modal changepassword -->
        <div class="modal fade" id="myModal7" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Đổi mật khẩu</h4>
                        <button type="button" style="position: unset; width: unset;border: unset;height:unset;" id="btnclosexchangepassword" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <input id="passoldchange" placeholder="Nhập mật khẩu cũ" autofocus autocomplete="on" class="form-control" type="password" />
                        <input id="passnewchange" style="margin:6px 0;" placeholder="Nhập mật khẩu mới" autofocus autocomplete="on" class="form-control" type="password" />
                        <input id="prepasschange" placeholder="Nhập lại mật khẩu" autofocus autocomplete="on" class="form-control" type="password" />
                    </div>
                    <div class="modal-footer" style="justify-content: space-between;">
                        <button type="button" id="btnsubmitchangepassword" class="btn btn-outline-success">
                            <span class="spinner-grow spinner-grow-sm" style="display:none"></span>
                            Xác nhận
                        </button>
                        <button type="button" id="btnclosechangepassword" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
        <!--Modal changepassword end-->
        <!-- all js here -->
        <script src="~/assets/js/popper.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <script src="~/assets/js/ajax-mail.js"></script>
        <script src="~/assets/js/plugins.js"></script>
        <script src="~/Scripts/alertify.min.js"></script>
        <script src="~/assets/js/jquery-ui.js"></script>
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

        <script src="@Url.Content("~/Scripts/jquery.signalR-2.4.2.min.js")"></script>
        <script src="@Url.Content("~/signalr/hubs")"></script>
        <script src="~/assets/js/main.js"></script>
        <script src="~/assets/js/code/toast.js"></script>
        <script src="~/assets/js/code/main.js"></script>
        <script>
            $(function () {
                var counterHub = $.connection.counterHub;
                $.connection.hub.start().done(function () {

                })
                counterHub.client.UpdateCount = function (count)
                {
                    $('#visting').text(count);                   
                }               
                counterHub.client.UpdateTotal = function (count) {
                    $('#visited').text(count);
                }
            })
        </script>
        @RenderSection("scripts", false)
</body>

</html>