@using NONBAOHIEMVIETTIN.Models;
@model PagedList.IPagedList<products>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách nón";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
    var db = new nonbaohiemviettinEntities();
}
@section styles{
    <style>

        .img-product {
            width: 100px;
            height: 100px;
        }

        .modal-body {
            overflow-y: scroll;
            max-height: 70vh;
        }

            .modal-body p {
                margin: 0;
            }
    </style>
}
@section scripts{
    @if (TempData["status"] != null)
    {
        <script>
        $(function () {
            alertify.success(`@TempData["status"]`);
        })
        </script>
    }

}
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex align-items-center justify-content-between flex-wrap">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách nón</h6>
        <form method="get" action="/admin/tim-kiem-non" class="d-sm-inline-block form-inline ml-md-3 my-2 my-md-0 mw-100 navbar-search">
            <div class="input-group">                                
                <input name="tukhoa" type="text" class="form-control bg-light border-0 small" placeholder="Tìm kiếm..." aria-label="Search" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </form>
        <a href="/admin/them-moi-non" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Thêm mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="ui-sortable-table table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <td>Ảnh</td>
                        <th>Tên</th>
                        <th>Loại nón</th>
                        <th>Hãng sản xuất</th>
                        <th>Nhóm nón</th>
                        <th>Xoá?</th>
                        <td>Các ảnh liên quan</td>
                        <td>Công cụ</td>
                    </tr>
                </thead>
                <tbody>                  
                    @foreach (var item in Model)
                    {
                        <tr id="_product_@item.id">
                            <td>@item.id</td>
                            <td><img class="img-product" src="~/@item.image" /></td>
                            <td>@item.name</td>
                            <td>@item.category.name</td>
                            <td>@item.production.name</td>
                            <td>@item.groupproduct.name</td>
                            <td id="_product_@item.id-delete">@(item.isdelete == false ? "Chưa xoá" : "Đã xoá")</td>
                            <td class="text-center">
                                <a data-id="@item.id" class="btn btn-images btn-outline-info" href="">                                   
                                   Quản lý
                                </a>
                            </td>
                            <td>
                                <div class="tool d-flex align-items-center flex-column justify-content-center">
                                    <a data-toggle="modal" data-target="#product_@item.id" title="Xem sản phẩm @item.name" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                                        <i class="far fa-eye"></i>
                                    </a>

                                    <a href="/admin/sua-non/@(item.alias)" title="Sửa sản phẩm @item.name" class="mt-1 mb-1 d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                                        <i class="far fa-edit"></i>
                                    </a>
                                    @if (item.isdelete == false)
                                    {
                                        <a data-id="@item.id" title="Xoá sản phẩm @item.name" class="delete_product d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                                            <i class="far fa-trash-alt"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                        <!-- Product Modal-->
                        <div class="modal fade" id="product_@item.id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Thông tin nón <strong>@item.name</strong></h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p><strong>Mã:</strong> @item.id</p>
                                        <p><strong>Tên:</strong> @item.name</p>
                                        <p><strong>Ngày tạo: </strong> @item.createddate</p>
                                        <p><strong>Thuộc loại nón:</strong> @item.category.name</p>
                                        <p><strong>Thuộc nhóm nón:</strong> @item.groupproduct.name</p>
                                        <p><strong>Thuộc hãng sản xuất:</strong> @item.production.name</p>
                                        <p><strong>Mô tả:</strong>@Html.Raw(item.description)</p>
                                        <p><strong>Bán chạy:</strong> @(item.fastsell == true ? "Có" : "Không")</p>
                                        <p><strong>Hình ảnh:</strong> <img src="~/@item.image" class="img-product" /></p>
                                        <p><strong>Sản phẩm mới:</strong> @(item.newproduct == true ? "Có" : "Không")</p>
                                        <p><strong>Giá:</strong> @item.price</p>
                                        <p><strong>Giá khuyến mãi:</strong> @item.promationprice</p>
                                        <p><strong>Số lượng còn:</strong> @item.quantity</p>
                                        <div style="display:flex">
                                            <strong>Đánh giá:</strong>
                                            <ul style="margin:0;list-style: none;display: inherit;padding: 0;padding-left: 12px;">
                                                @{ var avgStar = Math.Round(item.rate.Average(x => x.star) != null ? (decimal)item.rate.Average(x => x.star) : 0, 0);}
                                                @for (var z = 0; z < 5; z++)
                                                {
                                                    if (avgStar != 0 && z < Math.Round((decimal)avgStar, 0))
                                                    {
                                                        <li><a class="ratting"><i class="fa fa-star"></i></a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a><i class="fa fa-star"></i></a></li>

                                                    }
                                                }
                                            </ul>
                                        </div>
                                        <p><strong>Trạng thái:</strong> @(item.status == true ? "Còn hàng" : "Hết hàng")</p>
                                        <p><strong>Số lượt xem:</strong> @item.viewcount</p>
                                        <p><strong>Sản phẩm:</strong> <span id="_product_@item.id-delete-detail">@(item.isdelete == true ? "Đã xoá" : "Chưa xoá")</span></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Đóng</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
@if (ViewBag.last != 1)
{
    <ul class="pagination mr-auto ml-auto" style="justify-content:center;">
        @if(ViewBag.check==true)
        { 
        @Html.PagedListPager(Model,
        page => Url.Action("Index", new { page }),
        new PagedListRenderOptions
        {
            MaximumPageNumbersToDisplay = 3
        })
        }
        else
        {
            @Html.PagedListPager(Model, page => Url.Action("Search", new { tukhoa = Request.Url.Query.Substring(Request.Url.Query.IndexOf("?tukhoa="), Request.Url.Query.LastIndexOf('&') == -1 ? Request.Url.Query.Length : Request.Url.Query.LastIndexOf('&')).Replace("?tukhoa=", ""), page }),
                                    new PagedListRenderOptions
                                    {
                                        MaximumPageNumbersToDisplay = 5
                                    });
        }

    </ul>
}

<div class="modal fade" id="image-manager" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Quản lý ảnh</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="idproduct" />
                <div id="lstimage" class="d-flex">

                </div>
                <button class="btn btn-success" id="btnselectimage" data- type="button">Chọn ảnh</button>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" id="btnsave" data- type="button" data-dismiss="modal">Lưu</button>

                <button class="btn btn-secondary" type="button" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>