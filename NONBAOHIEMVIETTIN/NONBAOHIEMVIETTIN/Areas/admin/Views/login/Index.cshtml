
@{   
    Layout = null;
    TempData["Version"] = "2.0";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/images/logo/logo.png">

    <meta name="description" content="">
    <meta name="author" content="">
    <title>Đăng nhập | Admin</title>
    <!-- Custom fonts for this template-->
    <link href="~/Areas/admin/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Areas/admin/assets/css/sb-admin-2.min.css?@TempData["Version"]" rel="stylesheet">
    <link href="~/assets/css/loadpage.css?@TempData["Version"]" rel="stylesheet" />
    <style>
         button[disabled] {
            opacity: 0.85;
            cursor: not-allowed !important;
        }           
    </style>
</head>
<body class="bg-gradient-primary vh-100">
    <div class="loader">
        <a style="color:rgb(78,115,223)" href="http://nonbaohiem.ml" class="loader-text">nonbaohiem.ml</a>
        <span style="color:rgb(78,115,223)" class="fas fa-spinner turn _icon">
        </span>
    </div>
    <div class="container h-100">
        <!-- Outer Row -->
        <div class="row justify-content-center h-100">
            <div class="col-xl-10 col-lg-12 col-md-9 m-auto">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Chào mừng đến với trang đăng nhập <strong>Admin</strong></h1>
                                    </div>
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user"
                                                   id="usernameadmin" aria-describedby="emailHelp"
                                                   placeholder="Tài khoản">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   id="passwordadmin" placeholder="Mật khẩu">
                                        </div>
                                        @*<div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">
                                                    Remember
                                                    Me
                                                </label>
                                            </div>
                                        </div>*@
                                        <button class="btn btn-primary btn-user btn-block">
                                            Đăng nhập
                                        </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/admin/assets/vendor/jquery/jquery.min.js?@TempData["Version"]"></script>
    <script src="~/Areas/admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js?@TempData["Version"]"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/assets/vendor/jquery-easing/jquery.easing.min.js?@TempData["Version"]"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Areas/admin/assets/js/sb-admin-2.min.js?@TempData["Version"]"></script>
    <script src="~/assets/js/notify.min.js?@TempData["Version"]"></script>
    <script src="~/Areas/admin/assets/js/code/main.js?@TempData["Version"]"></script>
    <script>
            $(window).on('load', function (event) {
               $('.loader').remove();
            });
    </script>
</body>
</html>

