@model NONBAOHIEMVIETTIN.Models.promotion
@{
    ViewBag.Title = "Thêm mới phiếu giảm giá";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script>
        // Disable form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Get the forms we want to add validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

    </script>
    @if (TempData["status"] != null)
    {
        <script>
        $(function () {
            alertify.error(`@TempData["status"]`);
        })
        </script>
    }
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thêm mới phiếu giảm giá</h6>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "Promotion_admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "needs-validation", @novalidate = "true" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-12">Tên giảm giá</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @placeholder = "Nhập vào tên giảm giá" ,@required=true, @class = "form-control" } })
                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Nhập vào tên giảm giá</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-12">Ngày bắt đầu</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.start_date, new { htmlAttributes = new {  @placeholder = "Nhập vào ngày bắt đầu.", @required = true, @class = "form-control",@type = "datetime-local" } })

                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Nhập vào ngày bắt đầu</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-12">Ngày kết thúc</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.end_date, new { htmlAttributes = new { @placeholder = "Nhập vào ngày kết thúc.", @required = true, @class = "form-control", @type = "datetime-local" } })                        
                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Nhập vào ngày kết thúc</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-12">Giảm giá</label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.discount, new { htmlAttributes = new { @placeholder = "Nhập vào giảm giá.",@min=1, @required = true, @class = "form-control", @type = "number" } })
                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Nhập vào giảm giá</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-12">Số lượng sử dụng (<strong>-1</strong> không giới hạn) </label>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.quantity_use, new { htmlAttributes = new { @placeholder = "Nhập vào số lượng người sử dụng.", @min = -1, @required = true, @class = "form-control", @type = "number" } })
                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Nhập vào số lượng sử dụng</div>
                    </div>
                </div>
                
                <div class="form-group">
                    <a href="/giam-gia" class="btn btn-light btn-icon-split" style="margin:0 0.75rem">
                        <span class="icon text-gray-600">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                        <span class="text">Trở về</span>
                    </a>
                    <button type="submit" style="margin:0 0.75rem" class="btn btn-success btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Tạo mới</span>
                    </button>
                </div>
            </div>
        }
    </div>
</div>
