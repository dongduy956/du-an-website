@using NONBAOHIEMVIETTIN.Models
@{
    var db = new nonbaohiemviettinEntities();
    var lstwish = Session["wishSession"] as List<CartItem>;
}
<!--categorie menu start-->
<div class="sidebar_widget catrgorie mb-35">
    <h3>Danh mục sản phẩm</h3>
    <ul>
        @foreach (var itemCategory in db.category.Where(x=>x.isdelete==false).ToList())
            {
            <li class="has-sub">
                <a class="category-item" data-alias="@(itemCategory.alias)">
                    <i class="fa fa-caret-right"></i>@itemCategory.name (@db.products.Count(x=>x.idcategory == itemCategory.id &&x.isdelete==false&&x.status==true))
                    <span class="operation">+</span>
                </a>
                <ul class="categorie_sub">
                    @foreach (var itemGroupproduct in db.groupproduct.Where(x=>x.isdelete==false).ToList())
                    {
                        <li>
                            <a href="/@itemCategory.alias/@(itemGroupproduct.alias)">
                                <i class="fa fa-caret-right"></i> @itemGroupproduct.name (@db.products.Count(x=>x.idgroupproduct == itemGroupproduct.id && x.status==true&&x.isdelete == false && x.idcategory == itemCategory.id))
                            </a>
                        </li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>
<!--categorie menu end-->
<!--wishlist block start-->
<div class="block_title">
    <h3><a href="~/yeu-thich">Yêu thích</a></h3>
</div>
<div class="sidebar_widget wishlist mb-35" id="lst-wish" style="overflow-y:scroll;height:200px;">
    <div class="img-wish" style="padding:24px;">
        <img src="~/assets/images/cart/no-cart.png" />
    </div>
    @if (lstwish == null || lstwish.Count() == 0)
    {

        <script>
            $(function () {
                $('.img-wish').show();
            });
        </script>
        <div class="block_content" style="display: flex;justify-content: space-between;padding: 0 8px;">
            <p>0 sản phẩm.</p>
            <a href="/yeu-thich">» Yêu thích của bạn</a>
        </div>
    }
    else
    {
        <script>
            $(function () {
                $('.img-wish').hide();
            });
        </script>
        foreach (var item in lstwish)
        {
            <div class="cart_item" id="wish-@item.Product.id">
                <div class="cart_img">
                    <a href="/chi-tiet/@(item.Product.alias)"><img src="/@item.Product.image" alt=""></a>
                </div>
                <div class="cart_info">
                    <a href="/chi-tiet/@(item.Product.alias)">@item.Product.name</a>
                    @if (item.Product.promationprice > 0)
                    {
                    <span class="cart_price">@Libary.Instances.convertVND(item.Product.promationprice.ToString())</span>
                    }
                    else
                    {
                        <span class="cart_price">@Libary.Instances.convertVND(item.Product.price.ToString())</span>

                    }
                    <span class="quantity">SL: @item.Quantity</span>
                </div>
                <div class="cart_remove">
                    <a title="Xoá sản phẩm" data-id="@item.Product.id" href="" class="deletewish"><i class="fa fa-times-circle"></i></a>
                </div>
            </div>
        }
        <div class="block_content" style="display: flex;justify-content: space-between;padding: 0 8px;">
            <p>@(lstwish.Sum(x => x.Quantity)) sản phẩm.</p>
            <a href="/yeu-thich">» Yêu thích của bạn</a>
        </div>

    }

   


</div>
<!--wishlist block end-->
