                                            <a data-toggle="tab" href="#p_tab2" role="tab" aria-controls="p_tab2" aria-selected="false"><img src="/@ele.Value" alt=""></a>
                                        </li>
                                    }
                                }


                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="product_d_right">
                        <h1>@Model.product.name</h1>
                        <div class="product_ratting mb-10">
                            <ul id="countrate">

                                @for (var z = 0; z < 5; z++)
                                {
                                    if (avgStar != 0 && z < Math.Round((decimal)avgStar, 0))
                                    {
                                        <li><a class="ratting"><i class="fa fa-star"></i></a></li>
                                    }
                                    else
                                    {
                                        <li><a><i class="fa fa-star"></i></a></li>

                                    }
                                }
                            </ul>
                        </div>
                        <div class="product_desc">
                            @Html.Raw(Model.product.description)
                        </div>
                        <div class="content_price mb-15">
                            @if (Model.product.promationprice > 0)
                            {
                                <span class="new-price">@HoTro.Instances.convertVND(Model.product.promationprice.ToString())</span>
