                    <div class="modal_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-5 col-md-5 col-sm-12">
                                    <div class="modal_tab">
                                        <div class="tab-content" id="pills-tabContent">
                                            <div class="tab-pane fade show active" id="tab-@(i++)" role="tabpanel">
                                                <div class="modal_tab_img">
                                                    <a href="#"><img src="/@item.image" alt=""></a>
                                                </div>
                                            </div>
                                            @if (item.moreimage != null)
                                            {
                                                foreach (XElement ele in XElement.Parse(item.moreimage).Elements())
                                                {

                                                    <div class="tab-pane fade" id="tab-@(i++)" role="tabpanel">
                                                        <div class="modal_tab_img">
                                                            <a href="#"><img src="/@ele.Value" alt=""></a>
                                                        </div>
                                                    </div>
                                                }
                                            }                                          
                                        </div>
                                        <div class="modal_tab_button">
                                            <ul class="nav product_navactive" role="tablist">
                                                <li>
                                                    <a class="nav-link active" data-toggle="tab" href="#tab-@j" role="tab" aria-controls="tab-@(j++)" aria-selected="false"><img src="/@item.image" alt=""></a>
                                                </li>
                                                @if (item.moreimage != null)
                                                {
                                                    foreach (XElement ele in XElement.Parse(item.moreimage).Elements())
                                                    {

                                                        <li>
                                                            <a class="nav-link button_three" data-toggle="tab" href="#tab-@(j)" role="tab" aria-controls="tab-@(j++)" aria-selected="false"><img src="/@ele.Value" alt=""></a>
                                                        </li>
                                                    }
                                                }
                                               
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-7 col-md-7 col-sm-12">
                                    <div class="modal_right">
                                        <div class="modal_title mb-10">
                                            <h2>@item.name</h2>
                                        </div>
                                        <div class="modal_price mb-10">
                                            @if (item.promationprice > 0)
                                            {


                                                <span class="new_price">@HoTro.Instances.convertVND(item.promationprice.ToString())</span>
                                                <span class="old_price">@HoTro.Instances.convertVND(item.price.ToString())</span>
                                            }
                                            else
                                            {
                                                <span class="new_price">@HoTro.Instances.convertVND(item.price.ToString())</span>

                                            }
                                        </div>                                       
                                        <div class="modal_add_to_cart mb-15">
                                            <div class="form form-production">
                                                <input min="1" max="100" step="1" id="txtquantity-production-@item.id" value="1" type="number">
                                                <button data-id="@item.id" class="btnaddcart" type="submit">Thêm vào giỏ hàng</button>
                                            </div>
                                        </div>
                                        <div class="modal_description mb-15">
                                            @Html.Raw(item.description)
                                        </div>
                                        <div class="modal_social">
                                            <h2>Chia sẻ sản phẩm này</h2>
                                            <ul>
                                                <li><a data-alias="@item.alias" class="facebook" href="#"><i class="fa fa-facebook"></i></a></li>                                                
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
<!-- modal area category products end -->
