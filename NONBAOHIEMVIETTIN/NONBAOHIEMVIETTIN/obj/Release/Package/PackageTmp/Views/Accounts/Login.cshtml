@{
    ViewBag.Title = "Đăng nhập - Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Description = "Trang đăng nhập và đăng kí chính thức của website";
    ViewBag.Url = "https://" + HttpContext.Current.Request.Url.Host.ToString().Trim().ToLower() + HttpContext.Current.Request.RawUrl.ToString().Trim().ToLower();
    ViewBag.Image = "https://st2.depositphotos.com/1853861/7036/v/950/depositphotos_70364593-stock-illustration-login-button-icon.jpg";
}
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://www.google.com/recaptcha/api.js?hl=vi&#038;onload=recaptchaCallback&#038;render=explicit'"></script>
    <script src="~/assets/client/js/code/recaptcha.js?@TempData["Version"]"></script>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js"></script>
    <script src="~/assets/client/js/code/loginfacebook.js?@TempData["Version"]"></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <script src="~/assets/client/js/code/logingoogle.js?@TempData["Version"]"></script>

    <script src="~/assets/client/js/code/validateform_login_register.js?@TempData["Version"]"></script>

    <script>
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });       
    </script>
}
@section styles{
    <style>
        .close {
            padding: unset !important;
            margin: unset !important;
            position: unset !important;
            width: unset !important;
            height: unset !important;
            border: unset !important;
        }

        .modal-footer {
            display: flex;
            justify-content: space-between;
        }

        .modal-body input[type=password] {
            margin: 4px 0;
        }

        .login-social {
            display: flex;
            font-family: 'Myriad Pro';
            flex-direction: column;
        }

            .login-social button, .login-social a {
                text-transform: uppercase;
                font-size: 1rem;
            }

        .error {
            color: red !important;
        }
    </style>
}
<div class="col-lg-12 col-md-12" style="padding:0">
    <!--breadcrumbs area start-->
    <div class="breadcrumbs_area">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">Trang chủ</a></li>
                        <li><i class="fa fa-angle-right"></i></li>
                        <li>Đăng nhập - Đăng ký</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--breadcrumbs area end-->
    <!-- customer login start -->
    <div class="customer_login">
        <div class="row">
            <!--login area start-->
            <div class="col-lg-6 col-md-6">
                <div class="account_form">
                    <h2>Đăng nhập</h2>
                    <div class="form">
                        <form name="login">
                            <div class="form-group">
                                <label for="usernamelogin">Tài khoản <span>*</span></label>
                                <input name="usernamelogin" type="text" id="usernamelogin" value="" />
                            </div>
                            <div class="form-group">
                                <label for="passwordlogin">Mật khẩu <span>*</span></label>
                                <input type="password" id="passwordlogin" name="passwordlogin" value="" />
                            </div>
                            <div class="form-group">
                                <div data-theme="light" class="g-recaptcha" data-sitekey="6LfSna0eAAAAABOWrjvDyY00MvAB6WORYEtSfdlJ"></div>
                            </div>
                            <div class="login_submit d-flex flex-wrap flex-column">
                                <div class="d-flex justify-content-space-around align-items-baseline ml-auto flex-wrap">
                                    <label for="remember" class="mr-2">
                                        <input id="remember" type="checkbox">
                                        Nhớ mật khẩu
                                    </label>
                                    <a id="btnfogetpass" href="">Quên mật khẩu?</a>
                                </div>
                                <button id="btnlogin">
                                    Đăng nhập
                                </button>
                               
                            </div>
                            <br />

                        </form>
                        <div class="login-social">
                            <a id="btnloginface" href="#" class="btn btn-outline-primary mb-2">
                                <i class="fab fa-facebook"></i>
                                <span>Đăng nhập với facebook</span>
                            </a>
                            <button id="btnlogingg" class="btn btn-outline-danger">

                                <i class="fab fa-google"></i>
                                <span>Đăng nhập với google</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!--login area start-->
            <!--register area start-->
            <div class="col-lg-6 col-md-6">
                <div class="account_form register">
                    <h2>Đăng ký</h2>
                    <form name="register" class="form">
                        <p>
                            <label for="usernameregister">Tài khoản <span>*</span></label>
                            <input id="usernameregister" name="usernameregister" type="text">
                        </p>
                        <p>
                            <label for="passwordregister">Mật khẩu <span>*</span></label>
                            <input id="passwordregister" name="passwordregister" type="password">
                        </p>
                        <p>
                            <label for="prepasswordregister">Nhập lại mật khẩu <span>*</span></label>
                            <input id="prepasswordregister" name="prepasswordregister" type="password">
                        </p>
                        <p>
                            <label for="emailregister">Email <span>*</span></label>
                            <input id="emailregister" name="emailregister" type="email">
                        </p>
                        <p>
                            <label for="fullnameregister">Họ và tên <span>*</span></label>
                            <input id="fullnameregister" name="fullnameregister" type="text">
                        </p>
                        <p>
                            <label for="phoneregister">Số điện thoại <span>*</span></label>
                            <input id="phoneregister" name="phoneregister" type="text">
                        </p>
                        <p>
                            <label for="addressregister">Địa chỉ <span>*</span></label>
                            <input id="addressregister" name="addressregister" type="text">
                        </p>
                        <p>
                            <label for="imageregister">Ảnh đại diện</label>
                            <span class="custom-file">
                                <input type="file" name="file" class="custom-file-input" id="imageregister">
                                <label class="custom-file-label" for="customFile">Chọn file</label>
                            </span>
                        </p>
                        <div class="login_submit">
                            <button class="w-100" id="btnregister">
                                Đăng ký
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
    <!-- customer login end -->
</div>
<!-- Modal register -->
<div class="modal fade" id="myModal3" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <form name="submitregister">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nhập mã xác nhận</h4>
                    <button type="button" id="btnclosexregister" class="close" data-dismiss="modal" style="">&times;</button>
                </div>
                <div class="modal-body">
                    <input id="keyword" name="keywordregister" autofocus autocomplete="on" class="form-control" type="text" />
                </div>
                <div class="modal-footer">
                    <button id="btnsubmitregister" class="btn btn-outline-success">
                        Xác nhận
                    </button>
                    <button type="button" id="btnsendagainregister" class="btn btn-outline-primary">

                        Gửi lại mã

                    </button>
                    <button type="button" id="btncloseregister" class="btn btn-outline-danger" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!--Modal register end-->
