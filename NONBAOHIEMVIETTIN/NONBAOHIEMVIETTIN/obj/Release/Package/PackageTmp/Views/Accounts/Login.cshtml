<div class="modal fade" id="myModal6" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <form name="submitchangepass">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Đổi mật khẩu mới</h4>
                    <button type="button" id="btnclosexchangepass" class="close" data-dismiss="modal" style="">&times;</button>
                </div>
                <div class="modal-body">
                    <input id="passnew" name="passnew" placeholder="Nhập mật khẩu mới" autofocus autocomplete="on" class="form-control" type="password" />
                    <input id="prepass" name="prepass" placeholder="Nhập lại mật khẩu" autofocus autocomplete="on" class="form-control" type="password" />
                </div>
                <div class="modal-footer">
                    <button id="btnsubmitchangepass" class="btn btn-outline-success">
                        Xác nhận
                    </button>
                    <button type="button" id="btnclosechangepass" class="btn btn-outline-danger" data-dismiss="modal">Đóng</button>
                </div>
            </div>
