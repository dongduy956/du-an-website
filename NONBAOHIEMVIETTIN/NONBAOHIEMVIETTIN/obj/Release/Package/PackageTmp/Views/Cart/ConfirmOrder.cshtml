@{
    ViewBag.Title = "Xác nhận đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Description = "Trang xác nhận thanh toán thành công khi khách hàng thanh toán online";
    ViewBag.Url = "https://" + HttpContext.Current.Request.Url.Host.ToString().Trim().ToLower() + HttpContext.Current.Request.RawUrl.ToString().Trim().ToLower();
    ViewBag.Image = "https://thumbs.dreamstime.com/z/happy-businessman-get-success-cartoon-illustration-white-background-38913238.jpg";
}
<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="row">
        <div class="col-12">
            <div class="breadcrumb_content">
                <ul>
                    <li><a href="/">Trang chủ</a></li>
                    <li><i class="fa fa-angle-right"></i></li>
                    <li>Xác nhận đơn hàng</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<div class="error_section">
    <div class="row">
        <div class="col-12">
            <div class="error_form">
                <h1>Thông báo</h1>
                @if (ViewBag.idorder != null)
                {
                    <h2>Xác nhận đơn hàng @ViewBag.idorder</h2>
                }
                <h2>Lỗi!!!</h2>
                <p>@ViewBag.result</p>
                <a href="/">Trở về trang chủ</a>
            </div>
        </div>
    </div>
</div>
